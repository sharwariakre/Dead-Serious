z# =========================================================
# DEAD SERIOUS - Environment Configuration Template
# =========================================================
# Copy this file to .env and fill in your own values.
# NEVER commit your real .env file to version control.
# =========================================================


# =========================================================
# Core Server
# =========================================================
PORT=3000
USE_POSTGRES=true

# PostgreSQL connection string format:
# postgres://USERNAME:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgres://USER:PASSWORD@localhost:5432/deadserious


# =========================================================
# Security / Authentication
# =========================================================
# Generate secure random values (see README for commands)

JWT_SECRET=GENERATE_RANDOM_64_BYTE_BASE64
AUTH_FIELD_ENCRYPTION_KEY=GENERATE_RANDOM_32_BYTE_BASE64
MASTER_SHARE_ENCRYPTION_KEY=GENERATE_RANDOM_32_BYTE_HEX

# Recommended: 12 for production
BCRYPT_ROUNDS=12


# =========================================================
# Email (SMTP)
# =========================================================
# For Gmail:
# - Use smtp.gmail.com
# - Use an App Password (NOT your actual Gmail password)

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_FROM=your-email@example.com

EMAIL_USER=your-email@example.com
EMAIL_PASS=your-app-password


# =========================================================
# MinIO / S3 Storage
# =========================================================
S3_ENABLED=true

# Required by AWS SDK even when using MinIO
AWS_REGION=us-east-1

# Example (local MinIO):
# http://localhost:9000
# Example (remote):
# https://your-domain.com
S3_ENDPOINT_URL=http://localhost:9000

# MinIO usually requires this
S3_FORCE_PATH_STYLE=true

# Bucket prefix for per-user buckets
S3_BUCKET_PREFIX=deadserious-user

# MinIO credentials (set these in MinIO console)
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_MEs